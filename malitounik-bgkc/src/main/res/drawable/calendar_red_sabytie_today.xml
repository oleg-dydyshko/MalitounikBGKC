<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary_black" />
                    <stroke android:width="2sp" android:color="@color/colorPrimaryDark" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <bitmap android:gravity="right|bottom" android:src="@drawable/calendar_plus" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <stroke android:width="2sp" android:color="@color/colorPrimaryDark" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <bitmap android:gravity="right|bottom" android:src="@drawable/calendar_plus" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <stroke android:width="2sp" android:color="@color/colorPrimaryDark" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <bitmap android:gravity="right|bottom" android:src="@drawable/calendar_plus" />
            </item>
        </layer-list>
    </item>
</selector>
