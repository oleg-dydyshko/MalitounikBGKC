<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/colorStrogiPost2"/>
            <stroke android:width="1sp" android:color="@color/colorWhite" />
            <corners android:radius="20sp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <solid android:color="@color/colorStrogiPost"/>
            <stroke android:width="1sp" android:color="@color/colorWhite" />
            <corners android:radius="20sp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorStrogiPost"/>
            <stroke android:width="1sp" android:color="@color/colorWhite" />
            <corners android:radius="20sp" />
        </shape>
    </item>
</selector>