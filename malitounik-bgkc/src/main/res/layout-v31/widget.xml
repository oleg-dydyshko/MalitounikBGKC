<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullCaliandar"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_widget"
        android:minWidth="140sp"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16sp"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/calendar_fon"
            android:foregroundGravity="left"
            android:singleLine="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textDenNedeli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textChislo"
                android:layout_alignTop="@+id/settings"
                android:layout_alignEnd="@+id/textChislo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0sp"
                android:background="@color/colorDivider"
                android:gravity="center"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textChislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textDenNedeli"
                android:layout_alignStart="@+id/textMesiac"
                android:layout_alignEnd="@+id/textMesiac"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorDivider"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="false"
                android:textSize="44sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textMesiac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textChislo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                android:background="@color/colorDivider"
                android:gravity="center"
                android:minWidth="80sp"
                android:minHeight="25sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/znakTipicona"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/textChislo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5sp"
                android:layout_marginTop="5sp"
                android:contentDescription="@string/empty"
                android:src="@drawable/znaki_krest"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20sp"
                android:layout_height="10sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:contentDescription="@string/empty"
                android:src="@drawable/fishe"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="22sp"
                    android:layout_height="22sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/settings_black" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textCviatyGlavnyia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:gravity="center_horizontal"
            android:paddingBottom="5sp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textSviatyia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_horizontal"
            android:gravity="start"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|bottom"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:background="@color/colorDivider"
            android:gravity="start|center_vertical"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>