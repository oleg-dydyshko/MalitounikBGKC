<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32sp">

        <TextView
            android:id="@+id/novyZavet"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/knopka_red"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/novy_zapaviet"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/staryZavet" />

        <TextView
            android:id="@+id/staryZavet"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/knopka_red"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/stary_zapaviet"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/prodolzych"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/knopka_ser"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/bible_time"
            android:textColor="@color/colorPrimary_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/novyZavet" />

        <TextView
            android:id="@+id/myBible"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/knopka_ser"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/str_short_label1"
            android:textColor="@color/colorPrimary_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prodolzych" />

        <TextView
            android:id="@+id/zakladki"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/knopka_ser"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/zakladki_bible"
            android:textColor="@color/colorPrimary_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myBible" />

        <TextView
            android:id="@+id/natatki"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/knopka_ser"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/natatki_biblii"
            android:textColor="@color/colorPrimary_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zakladki" />

        <TextView
            android:id="@+id/saeche"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/knopka_ser"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/poshuk"
            android:textColor="@color/colorPrimary_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/natatki" />

        <TextView
            android:id="@+id/umovy_karystannia"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="24sp"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/knopka_ser"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/alesyaSemukha2"
            android:textColor="@color/colorPrimary_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saeche" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>