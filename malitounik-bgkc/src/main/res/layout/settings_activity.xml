<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStartWithNavigation="0sp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/titleToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:paddingBottom="10sp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:text="@string/vygliad"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="@color/colorPrimary" />

            <RadioGroup
                android:id="@+id/nightGrup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <by.carkva_gazeta.malitounik.RadioButtonCustom
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10sp"
                    android:paddingBottom="10sp"
                    android:text="@string/day" />

                <by.carkva_gazeta.malitounik.RadioButtonCustom
                    android:id="@+id/night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:paddingBottom="10sp"
                    android:text="@string/widget_day_d_n" />

                <by.carkva_gazeta.malitounik.RadioButtonCustom
                    android:id="@+id/autoNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:paddingBottom="10sp"
                    android:text="@string/auto_widget_day_d_n" />
            </RadioGroup>

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/spinnerFontOpis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:paddingTop="10sp"
                android:soundEffectsEnabled="false"
                android:text="@string/settengs_font_size_app"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinnerFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/checkBox9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/fullscreen" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/admin_day_in_year"
                android:visibility="gone" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:text="@string/kiravanne"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="@color/colorPrimary" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/autoprag" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/checkBox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/ekpan_on" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/knopka_ser"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/site_admin"
                android:textColor="@color/colorPrimary_text"
                android:visibility="gone" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:text="@string/biblia"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="@color/colorPrimary" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/maranata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/maranata_opis" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/sinoidal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/bsinaidal" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/notificationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:text="@string/sviaty_notifi"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="@color/colorPrimary" />

            <RadioGroup
                android:id="@+id/notificationGrup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <by.carkva_gazeta.malitounik.RadioButtonCustom
                    android:id="@+id/notificationOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:paddingBottom="10sp"
                    android:text="@string/apav_only" />

                <by.carkva_gazeta.malitounik.RadioButtonCustom
                    android:id="@+id/notificationFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:paddingBottom="10sp"
                    android:text="@string/apav_all" />

                <by.carkva_gazeta.malitounik.RadioButtonCustom
                    android:id="@+id/notificationNon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:paddingBottom="5sp"
                    android:text="@string/apav_no" />
            </RadioGroup>

            <Spinner
                android:id="@+id/spinnerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/vibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:checked="true"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/vibration" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/guk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:checked="true"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/sound" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/notifiSvizta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/knopka_ser"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/settings_notifi_sviata"
                android:textColor="@color/colorPrimary_text"
                android:visibility="gone" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/pavedamic3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_default"
                android:gravity="center_vertical"
                android:padding="10sp"
                android:text="@string/no_notifikations"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/help_notifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/knopka_ser"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/notifi_fix"
                android:textColor="@color/colorPrimary_text"
                android:visibility="gone" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/secret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:text="@string/sviaty_under"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="@color/colorPrimary" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/pkc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/pkc" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/prav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/sviaty_ulian" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/dzair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/sviaty_dziar" />

            <by.carkva_gazeta.malitounik.SwitchCompatCustom
                android:id="@+id/praf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableStart="@drawable/stiker"
                android:drawablePadding="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="@string/sviaty_pfes" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/colorSecondary_text" />

            <by.carkva_gazeta.malitounik.TextViewCustom
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/knopka_red"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/settings_default"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
