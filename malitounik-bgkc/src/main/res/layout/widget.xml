<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullCaliandar"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorIcons"
        android:minWidth="140dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:background="@drawable/calendar_fon"
            android:foregroundGravity="left"
            android:singleLine="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textDenNedeli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textChislo"
                android:layout_alignLeft="@+id/textChislo"
                android:layout_alignTop="@+id/settings"
                android:layout_alignEnd="@+id/textChislo"
                android:layout_alignRight="@+id/textChislo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:background="@color/colorDivider"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textChislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textDenNedeli"
                android:layout_alignStart="@+id/textMesiac"
                android:layout_alignLeft="@+id/textMesiac"
                android:layout_alignEnd="@+id/textMesiac"
                android:layout_alignRight="@+id/textMesiac"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorDivider"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="false"
                android:textColor="@color/colorPrimary_text"
                android:textSize="40sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textMesiac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textChislo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@color/colorDivider"
                android:gravity="center"
                android:minWidth="80dp"
                android:minHeight="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/znakTipicona"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/textChislo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="TODO"
                android:src="@drawable/znaki_krest"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:contentDescription="TODO"
                android:src="@drawable/fishe"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/settings_black" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textCviatyGlavnyia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textSviatyia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary_text" />

        <TextView
            android:id="@+id/textPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorDivider"
            android:gravity="start|center_vertical"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary_text"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>