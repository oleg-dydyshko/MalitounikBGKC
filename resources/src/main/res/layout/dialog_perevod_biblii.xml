<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <by.carkva_gazeta.malitounik.TextViewCustom
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10sp"
        android:text="@string/perevod"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />

    <by.carkva_gazeta.malitounik.TextViewCustom
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="@string/biblia_error"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/perevodGrupBible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <by.carkva_gazeta.malitounik.RadioButtonCustom
            android:id="@+id/bokuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingBottom="10sp"
            android:text="@string/title_biblia_bokun"
            android:textSize="14sp" />

        <by.carkva_gazeta.malitounik.RadioButtonCustom
            android:id="@+id/semuxa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingBottom="10sp"
            android:text="@string/title_biblia"
            android:textSize="14sp" />

        <by.carkva_gazeta.malitounik.RadioButtonCustom
            android:id="@+id/carniauski"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/title_biblia_charniauski"
            android:textSize="14sp" />

        <by.carkva_gazeta.malitounik.RadioButtonCustom
            android:id="@+id/nadsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/title_psalter"
            android:textSize="14sp" />

        <by.carkva_gazeta.malitounik.RadioButtonCustom
            android:id="@+id/sinoidal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingBottom="5sp"
            android:text="@string/bsinaidal"
            android:textSize="14sp" />
    </RadioGroup>
</LinearLayout>